<div style="display: flex;">
  <div id="search-results" style="margin-top: 20px; width:500px; margin-left:auto; margin-right:auto;">
    <button onclick='window.print();'>Print my list!</button>
    <h1 style="margin-top: 20px; width:500px; margin-left:auto; background-color: #F3969A; margin-right:auto">My
      Shopping List:</h1>
    <div>
      <ul>
        {{#each recipes as |recipe|}}
        {{#each recipe.recipe_ingredients as |ingredients|}}
        <li class="card-text">{{ingredients}}</li>
        {{/each}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>